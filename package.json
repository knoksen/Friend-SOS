{
  "name": "friend-sos",
  "private": true,
  "version": "0.1.0",
  "description": "A modern Progressive Web App for quickly sending AI-generated emergency alerts. Supports multiple AI providers (Gemini, OpenAI, Anthropic).",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:ci": "vitest run --coverage && playwright test"
  },
  "dependencies": {
    "@google/genai": "^1.16.0",
    "applicationinsights": "^3.9.0",
    "openai": "^4.29.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "autoprefixer": "^10.4.21",
    "jsdom": "^24.1.3",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^1.6.1"
  }
}
